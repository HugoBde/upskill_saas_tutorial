<div class="container">
    <h1 class="text-center">Contact Us</h1>
    
    <%= form_for "/contacts" do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        
        <%= f.label :email %>
        <%= f.text_field :email %>
        
        <%= f.label :question %>
        <%= f.text_area :question %>
        
        <%= f.submit 'Submit' %>
    <%end%>
</div>